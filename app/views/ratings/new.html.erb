<% provide(:title, 'Rate Us') %>
<h1>Rate Us</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@rating) do |f| %>

      <%= f.label :rating %>
      <table cellpadding = "10">
      <tr>
       <% 0.upto(10) do |rating| %>
        <td>
      <%= f.radio_button :rating, rating.to_s %> <%= f.label :rating, rating %>
      </td>
   	   <% end %>
        </tr>
   </table>

      <%= f.label :comments %>
      <%= f.text_field :content %>

      <%= f.submit "Rate", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>